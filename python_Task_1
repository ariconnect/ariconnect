print("Hey there! Let's calculate the area of as many circles as you want")
calculate = True
while calculate:
    unit= input("first, what's unit of distance measure would you like to use?: ")
    distance = int(input("Next, what's the radius of the circle?: "))
    pi = 3.14159265358979323846264338327950288419716939937510
    area= round((pi * distance * distance),2)
    print(f" The area of the circle is {area} square {unit}")

    again=input("Would you like to check the area of another circle? (Y/N) ")
    if again.upper()== "Y":
        print("Restarting circle calculator :)")
    else:
        print("Till next time then!")
        calculate = False
